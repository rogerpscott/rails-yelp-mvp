<div class="container">
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://lorempixel.com/400/200/food/');">
    <div class="card-category"><%= @restaurant.category %></div>
    <div class="card-description">
      <h2><%= @restaurant.name %></h2>
      <p><%= @restaurant.address %></p>
    </div>
    <a class="card-link" href="#" ></a>
  </div>
  <ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <span class="badge"><%= review.rating %></span>
    <%= review.content %>
  </li>
  <% end %>
</ul>
<div>
  <%= link_to "Add Review", new_restaurant_review_path(@restaurant), {class: "btn btn-primary"} %>
</div>
</div>

